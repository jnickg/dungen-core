# Source files
*.c         text=auto eol=lf
*.cc        text=auto eol=lf
*.cxx       text=auto eol=lf
*.cpp       text=auto eol=lf
*.c++       text=auto eol=lf
*.h         text=auto eol=lf
*.hh        text=auto eol=lf
*.hpp       text=auto eol=lf
*.h++       text=auto eol=lf
*.java      text=auto eol=lf
*.cs        text=auto eol=lf
*.sh        text=auto eol=lf
*.py        text=auto eol=lf
*.js        text=auto eol=lf
*.json      text=auto eol=lf
*.pl        text=auto eol=lf
# Microsoft-specific
*.sln       text=auto eol=crlf
*.cproject  text=auto eol=crlf
*.vbproj    text=auto eol=crlf
*.vcxproj   text=auto eol=crlf
*.vcproj    text=auto eol=crlf
*.csproj    text=auto eol=crlf
*.bat       text=auto eol=crlf
*.a filter=lfs diff=lfs merge=lfs -text
